with Core.Connectables;

with WUI.Widgets_Widgets_Slots.Emitters;

package WUI.Applications is

   type Application is
     limited new Core.Connectables.Connectable_Object with private;

   type Application_Access is access all Application'Class;

   not overriding function Focus_Changed_Signal
    (Self : in out Application)
       return not null access WUI.Widgets_Widgets_Slots.Signal'Class;

   ----------------------
   -- Global functions --
   ----------------------

   procedure Initialize;

   function Instance return Application_Access;

private

   type Application is
     limited new Core.Connectables.Connectable_Object with record
      Focus_Changed : aliased WUI.Widgets_Widgets_Slots.Emitters.Emitter
                         (Application'Unchecked_Access);
   end record;

end WUI.Applications;
