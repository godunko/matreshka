project Tools_Configure is

   for Main use ("configure-driver.adb");
   for Object_Dir use "../.objs/configure";
   for Exec_Dir use "..";
   for Source_Dirs use ("../tools/configure");

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-gnat05", "-gnato", "-fstack-check");
   end Compiler;

   package Builder is
      for Executable ("configure-driver.adb") use "configure";
   end Builder;

end Tools_Configure;
