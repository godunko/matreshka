--
--  This is Windows Service to run Spikedog
--
with "matreshka_common";
with "matreshka_config";
with "matreshka_spikedog_aws.gpr";

project Matreshka_Spikedog_Service is

   for Main use ("spikedog-service-driver.adb");
   for Source_Dirs use
    ("../source/web/spikedog/daemon/service");
   for Object_Dir use "../.objs/spikedog_service";

   ------------
   -- Linker --
   ------------

   package Linker is

      for Switches("ada") use ("-ladvapi32");

   end Linker;

   package Builder is

      for Executable ("spikedog-service-driver.adb") use "spikedog";

   end Builder;

   --------------
   -- Compiler --
   --------------

   package Compiler renames Matreshka_Common.Compiler;

   ------------
   -- Binder --
   ------------

   package Binder is

      for Default_Switches ("ada") use ("-E");

   end Binder;

end Matreshka_Spikedog_Service;
