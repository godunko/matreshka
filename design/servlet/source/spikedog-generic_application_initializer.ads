generic
   type Application_Initializer is
     limited new Servlet.Container_Initializers.Servlet_Container_Initializer
       with private;

package Spikedog.Generic_Application_Initializer is

   pragma Elaborate_Body;

end Spikedog.Generic_Application_Initializer;
