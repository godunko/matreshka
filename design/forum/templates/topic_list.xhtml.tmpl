<div class="topic-list" xmlns='http://www.w3.org/1999/xhtml' xmlns:mtl='http://forge.ada-ru.org/matreshka/template'>

 <div class="category">
  <div class="category-title">
  ${category.title}
  </div>
  <div class="category-descr">
  ${category.description}
  </div>
  ${category.topic_count} topics.
  Page: ${page.current} of ${page.total}
  <mtl:if expression="page.single">
    Go: <a href="1">[1]</a>
    <mtl:if expression="page.has_prev">
      <a href="${page.prev}">[${page.prev}]</a>
    </mtl:if>
    ... 
    <mtl:if expression="page.has_next">
      <a href="${page.next}">[${page.next}]</a>
    </mtl:if>
    <a href="${page.total}">[${page.total}]</a>
  </mtl:if>
 </div>

<mtl:for expression="topic of list">
 <div class="topic">
  <div class="topic-title">
  <a href="${topic.id}">${topic.title}</a>
  </div>
  <div class="topic-descr">
  ${topic.description}
  Created: ${topic.creation_time}
  Posts: ${topic.post_count}
  Last: ${topic.last_post_time}
  </div>
 </div>
</mtl:for>
</div>
