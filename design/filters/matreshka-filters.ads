--  Filter processes binary data by compress/decompress, encrypt/decrypt and
--  other purposes.

with League.Stream_Element_Vectors;

package Matreshka.Filters is
   pragma Preelaborate;

   type Filter is abstract tagged null record;

   not overriding procedure Read
     (Self   : in out Filter;
      Input  : League.Stream_Element_Vectors.Stream_Element_Vector;
      Output : in out League.Stream_Element_Vectors.Stream_Element_Vector)
     is abstract;
   --  Feed filter with new Input data and append available result to Output.

   not overriding procedure Flush
     (Self   : in out Filter;
      Output : in out League.Stream_Element_Vectors.Stream_Element_Vector)
     is abstract;
   --  Notify filter that input data is over and force it to append rest of
   --  result to Output.

end Matreshka.Filters;
